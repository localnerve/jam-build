{
  "name": "jam-build",
  "version": "2.0.0",
  "description": "A simple file-based jamstack webapp builder",
  "main": "index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run gulp-run -- build",
    "build:debug": "npm run gulp-debug -- build",
    "build:dev": "npm run lint && npm run gulp-run -- dev-build",
    "build:dev:debug": "npm run gulp-debug -- dev-build",
    "dev": "node src/application/server --PORT=5000 --ENV-PATH=private/host-env.json",
    "dev:debug": "cross-env DEBUG=server*,api* node --inspect-brk src/application/server/index.js --PORT=5000 --ENV-PATH=private/host-env.json --DEBUG",
    "dev:cover": "c8 node src/application/server --PORT=5000 --ENV-PATH=private/host-env.json --TEST",
    "gulp-run": "node --no-experimental-require-module ./node_modules/gulp/bin/gulp.js",
    "gulp-debug": "node --no-experimental-require-module --inspect-brk ./node_modules/gulp/bin/gulp.js",
    "install-arm": "pushd node_modules/@localnerve/gulp-imagemin && npm run install-arm && popd",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint .",
    "lint:css": "stylelint src/**/*.scss",
    "maint": "node src/application/server --MAINTENANCE=\"`date -v+2H -u +'%a, %d %b %Y %H:%M:%S GMT'`\" --ENV-PATH=private/host-env.json",
    "start": "NODE_ENV=production node src/application/server --ENV-PATH=private/host-env.json",
    "test": "npm run test:env -- playwright test --project=setup",
    "test:env": "cross-env AUTHZ_ADMIN_SECRET=deadbEf-2af536fa DB_DATABASE=jam_build DB_USER=jbuser DB_APP_USER=jbadmin DB_PASSWORD=deadbEef-5dccb117 DB_ROOT_PASSWORD=deadbEef-0b62360e DB_APP_PASSWORD=deadbEef-47148f2f",
    "test:env:local": "npm run test:env -- AUTHZ_URL=http://localhost:9010 AUTHZ_CLIENT_ID=E37D308D-9068-4FCC-BFFB-2AA535014B64 DEBUG=api*,server*,test*",
    "test:local:full": "npm run test:local:server && sleep 2 && npm run test:env -- DEBUG=testcontainers*,server*,api*,test* PWDEBUG=1 LOCALHOST_PORT=5000 playwright test --project=api --workers=1 && curl -X POST http://localhost:5000/shutdown",
    "test:local:server": "npm run test:env:local -- npm run dev:cover &",
    "test:local": "npm run test:env:local -- LOCALHOST_PORT=5000 playwright test --project=api --workers=1 --timeout=60000",
    "test:build": "npm run test:env -- DEBUG=testcontainers*,server*,api*,test* FORCE_BUILD=1 playwright test --project=setup --headed",
    "test:debug": "npm run test:env -- DEBUG=server*,api*,test* playwright test --project=api --workers=1 --timeout=60000 --headed",
    "test:_user": "node src/test/_createlocaluser.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/localnerve/jam-build.git"
  },
  "keywords": [
    "jam",
    "build",
    "web",
    "app"
  ],
  "author": "Alex Grant <alex@localnerve.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/localnerve/jam-build/issues"
  },
  "homepage": "https://github.com/localnerve/jam-build#readme",
  "dependencies": {
    "@authorizerdev/authorizer-js": "^2.0.3",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "debug": "^4.4.0",
    "express": "^5.1.0",
    "express-version-request": "^1.7.0",
    "express-version-route": "^1.2.4",
    "mariadb": "^3.4.2",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@localnerve/csp-hashes": "^5.0.8",
    "@localnerve/gulp-imagemin": "^11.5.4",
    "@localnerve/gulp-responsive": "^7.3.1",
    "@localnerve/sass-asset-functions": "^6.12.0",
    "@playwright/test": "^1.52.0",
    "@rollup/plugin-dynamic-import-vars": "^2.1.5",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@testcontainers/mariadb": "^10.24.2",
    "autoprefixer": "^10.4.21",
    "c8": "^10.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.25.1",
    "eslint-plugin-compat": "^6.0.2",
    "glob": "^11.0.2",
    "globals": "^16.0.0",
    "gulp": "^5.0.0",
    "gulp-filter": "^9.0.1",
    "gulp-html-minifier-terser": "^7.1.0",
    "gulp-postcss": "^10.0.0",
    "gulp-rev": "^11.0.0",
    "gulp-rev-delete-original": "^0.2.3",
    "gulp-rev-rewrite": "^6.0.0",
    "handlebars": "^4.7.8",
    "mkdirp": "^3.0.1",
    "modern-normalize": "^3.0.1",
    "pino-pretty": "^13.0.0",
    "plugin-error": "^2.0.1",
    "puppeteer": "^24.7.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.40.1",
    "rollup-plugin-output-manifest": "^2.0.0",
    "sass": "^1.87.0",
    "sitemap": "^8.0.0",
    "stylelint": "^16.19.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "stylelint-no-unsupported-browser-features": "^8.0.4",
    "tar": "^7.4.3",
    "testcontainers": "^10.24.2",
    "workbox-build": "^7.3.0",
    "workbox-core": "^7.3.0",
    "workbox-window": "^7.3.0"
  },
  "overrides": {
    "download": "npm:@xhmikosr/downloader",
    "bin-wrapper": "npm:@xhmikosr/bin-wrapper",
    "bin-build": "npm:@localnerve/bin-build",
    "sourcemap-codec": "npm:@jridgewell/sourcemap-codec",
    "got": "^13.0.0",
    "semver-regex": "^4.0.5",
    "cross-spawn": "^7.0.6"
  }
}

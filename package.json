{
  "name": "jam-build",
  "version": "1.0.9",
  "description": "A simple file-based jamstack webapp builder",
  "main": "index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run lint && gulp build",
    "build:debug": "node --inspect-brk ./node_modules/gulp/bin/gulp.js build",
    "build:dev": "gulp dev-build",
    "dev": "node src/application/server --PORT=5000 --ENV-PATH=private/host-env.json",
    "dev:debug": "node --inspect-brk src/application/server/index.js --PORT=5000 --ENV-PATH=private/host-env.json --DEBUG",
    "lint": "eslint .",
    "maint": "node src/application/server --PORT=5000 --MAINTENANCE='Fri, 21 Mar 2025 05:00:00 GMT'",
    "start": "NODE_ENV=production node src/application/server --PORT=5000 --ENV-PATH=private/host-env.json",
    "test": "echo \"no tests yet\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/localnerve/jam-build.git"
  },
  "keywords": [
    "jam",
    "build",
    "web"
  ],
  "author": "Alex Grant <alex@localnerve.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/localnerve/jam-build/issues"
  },
  "homepage": "https://github.com/localnerve/jam-build#readme",
  "dependencies": {
    "compression": "^1.8.0",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@localnerve/csp-hashes": "^5.0.8",
    "@localnerve/sass-asset-functions": "^6.8.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.22.0",
    "glob": "^11.0.1",
    "globals": "^16.0.0",
    "gulp": "^5.0.0",
    "gulp-filter": "^9.0.1",
    "gulp-html-minifier-terser": "^7.1.0",
    "gulp-postcss": "^10.0.0",
    "gulp-rev": "^11.0.0",
    "gulp-rev-delete-original": "^0.2.3",
    "gulp-rev-rewrite": "^6.0.0",
    "handlebars": "^4.7.8",
    "mkdirp": "^3.0.1",
    "modern-normalize": "^3.0.1",
    "plugin-error": "^2.0.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.35.0",
    "sass": "^1.85.1",
    "sitemap": "^8.0.0",
    "workbox-build": "^7.3.0",
    "workbox-core": "^7.3.0",
    "workbox-window": "^7.3.0"
  }
}

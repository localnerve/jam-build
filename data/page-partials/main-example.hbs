<main class="main-example {{page}}">
  <h2>
    {{#with (lookup siteData.pages page)}}{{title}}{{/with}}
  </h2>
  
  {{! content for specific pages, if it exists }}
  {{#with (lookup content page)}}

  <section class="section {{lookup this 'section-0'}}">
    {{> (lookup this 'section-0') ..}}
  </section>

  {{/with}}

  {{#unless (lookup (lookup siteData.pages page) 'skip-all')}}
  {{! content for all pages that use this template }}
  {{#with (lookup content 'all')}}

  <section class="section {{lookup this 'section-0'}}">
    {{> (lookup this 'section-0') ..}}
  </section>

  <section class="section {{lookup this 'section-1'}}">
    {{> (lookup this 'section-1') ..}}
  </section>

  <section class="section {{lookup this 'section-2'}}">
    {{> (lookup this 'section-2') ..}}
  </section>

  {{/with}}
  {{/unless}}

</main>